<?xml version="1.0" encoding="utf-8" ?>
<!--세번째예제(액자)-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenXamlApp11.MainPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="wall.jpg" AbsoluteLayout.LayoutBounds="0, 0, 1920, 1080"/>
            <BoxView Color="Black" AbsoluteLayout.LayoutBounds="70, 70, 660, 660"/>
            <Image Source="image1.jpg" 
                   Aspect="AspectFill" 
                   AbsoluteLayout.LayoutBounds="100, 100, 600, 600"/>

        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>

