<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenXamlApp_7.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Horizontal">
            <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
                <Label Text="EM-1" BackgroundColor="Green"
                    FontSize="200" HorizontalOptions="Start"/>
                <Label Text="EM-2" BackgroundColor="Green"
                    FontSize="200" HorizontalOptions="Start"/>
            </StackLayout>
            <StackLayout Orientation="Vertical" VerticalOptions="Start">
                <Label Text="EM-3" BackgroundColor="Green"
                    FontSize="200" VerticalOptions="Start"/>
                <Label Text="EM-4" BackgroundColor="Green"
                    FontSize="200" VerticalOptions="Start"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>