                    <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                        <Label Text="EM-4" BackgroundColor="Green" FontSize="200" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"/>
                        <Label Text="EM-5" BackgroundColor="Green" FontSize="200" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                        <Label Text="EM-6" BackgroundColor="Green" FontSize="200" HorizontalTextAlignment="Center" HorizontalOptions="FillAndExpand"/>
