<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TizenXamlApp10.MainPage">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image Source="fireworks.png" 
                   AbsoluteLayout.LayoutBounds="0,0,100,100">
            </Image>

            <Image Source="fireworks.png" 
                   AbsoluteLayout.LayoutBounds="850,400,200,200">
            </Image>

            <Image Source="fireworks.png" 
                   AbsoluteLayout.LayoutBounds="1620,780,300,300">
            </Image>
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>

    
